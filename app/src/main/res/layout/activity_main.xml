<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/changeText">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wordOfTheDay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scrollHorizontally="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false" android:scrollbarAlwaysDrawVerticalTrack="false"
            android:verticalScrollbarPosition="defaultPosition" app:layout_constraintVertical_bias="0.281"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="34sp" android:textColor="#A91717"
            android:textStyle="bold" android:textAlignment="center" android:fontFamily="monospace"
            android:typeface="normal" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible"/>
    <Button
            android:text="@string/originalWordButton"
            android:layout_width="272dp"
            android:layout_height="53dp" android:id="@+id/wordButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.51" app:layout_constraintVertical_bias="0.392"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:backgroundTint="#A91717"/>
    <TextView
            android:layout_width="375dp"
            android:layout_height="212dp" android:id="@+id/definitionBox"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.777"
            android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#0C2292" app:layout_constraintHorizontal_bias="0.529"/>
    <Button
            android:text="@string/definitionButton"
            android:layout_width="268dp"
            android:layout_height="50dp" android:id="@+id/definitionButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.524" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.942" android:backgroundTint="#0C2292"/>
    <TextView
            android:layout_width="380dp"
            android:layout_height="93dp" android:id="@+id/infoBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/wordButton" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintVertical_bias="0.204" android:textSize="16sp" android:textAlignment="viewStart"
            android:fontFamily="monospace" android:textColor="#000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>